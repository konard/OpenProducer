APP_NAME=OpenProducer
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=/absolute/path/to/database.sqlite

# Queue Configuration
QUEUE_CONNECTION=database

# GitHub Configuration
# Mode: 'app' for GitHub App, 'token' for Personal Access Token
GITHUB_APP_MODE=token
GITHUB_TOKEN=your_github_token_here

# GitHub App Configuration (if using app mode)
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY_PATH=
GITHUB_WEBHOOK_SECRET=

# OpenAI-Compatible API Configuration
# Supported providers: ZAI, OPENAI, CUSTOM
OPENAI_API_BASE_URL=https://openai-compatible.example.com/v1
OPENAI_API_KEY=your_openai_compatible_key
OPENAI_PROVIDER=ZAI
OPENAI_MODEL=zai-glm-4.6
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Bot Configuration
BOT_RUN_RATE_LIMIT_PER_MINUTE=30
BOT_MAX_ISSUES_PER_RUN=100
BOT_ENABLE_CONTENT_FILTERING=true
BOT_REQUIRE_CONFIRMATION_THRESHOLD=50

# Cache Configuration
CACHE_DRIVER=file
FILESYSTEM_DISK=local
SESSION_DRIVER=file
SESSION_LIFETIME=120

BROADCAST_DRIVER=log
MEMCACHED_HOST=127.0.0.1
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
