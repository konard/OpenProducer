{
    "name": "openproducer/github-issue-spawner",
    "description": "GitHub bot that creates multiple issues based on templates from a control issue",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "vlucas/phpdotenv": "^5.5",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "OpenProducer\\IssueSpawner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenProducer\\IssueSpawner\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/bot.php"
    ],
    "scripts": {
        "test": "phpunit"
    }
}
